{
  "name": "react-typescript-starter-project",
  "version": "0.0.0",
  "description": "Starter React project that uses webpack, react-router, redux, and TypeScript.",
  "scripts": {
    "dev": "webpack serve --inline --hot --config webpack.config.dev.babel.js",
    "build:prod:server": "NODE_ENV=production babel --extensions .ts src/server --out-dir build/dist --ignore src/server/**/*.d.ts",
    "build:prod:client": "NODE_ENV=production webpack --progress --color --config webpack.config.prod.babel.js",
    "build:prod": "npm run build:prod:client && npm run build:prod:server",
    "postinstall": "npm run build:prod",
    "start": "node build/dist/server.js",
    "test": "jest --config jest-config.json && npm run lint",
    "lint:eslint": "eslint src test --ext .js,.jsx,.ts,.tsx",
    "lint:stylelint": "stylelint src/**/*.scss",
    "lint": "npm run lint:eslint; npm run lint:stylelint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djtsai/react-starter-project.git"
  },
  "engines": {
    "node": "^16.5.0",
    "npm": "^7.19.1"
  },
  "author": "Daniel Tsai <danieltsai.developer@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "connect-history-api-fallback": "^1.6.0",
    "express": "^4.17.1",
    "express-static-gzip": "^2.1.1",
    "helmet-csp": "^3.4.0",
    "is-port-reachable": "^3.0.0",
    "morgan": "^1.10.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-toastify": "^7.0.4",
    "redux": "^4.1.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/register": "^7.14.5",
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/morgan": "^1.9.3",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.18",
    "@types/react-router-dom": "^5.1.8",
    "@types/redux-logger": "^3.0.9",
    "@types/webpack-env": "^1.16.2",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "eslint": "^7.31.0",
    "eslint-import-resolver-webpack": "^0.13.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^3.0.1",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.0.6",
    "mini-css-extract-plugin": "^2.1.0",
    "node-sass": "^6.0.1",
    "redux-mock-store": "^1.5.4",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "terser-webpack-plugin": "^5.1.4",
    "typescript": "^4.3.5",
    "webpack": "^5.47.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  }
}
